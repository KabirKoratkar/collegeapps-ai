{
    "name": "waypoint",
    "version": "1.0.0",
    "private": true,
    "description": "Root package for monorepo build detection",
    "workspaces": [
        "backend"
    ],
    "scripts": {
        "start": "npm start -w backend",
        "frontend": "npx -y live-server . --port=5500",
        "backend": "npm run dev -w backend",
        "dev": "npm run backend",
        "dev:all": "npx -y concurrently \"npm run backend\" \"npm run frontend\"",
        "build": "echo 'No build step required'"
    },
    "engines": {
        "node": "20.x"
    }
}